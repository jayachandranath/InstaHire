<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:background="@drawable/bacimg"
    android:layout_height="match_parent"   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvRegister"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageUser"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/man"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearUser"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImageService"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/serplumber" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Provider"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Choose the Register Type"
            android:textSize="25sp" />


    </RelativeLayout>


</LinearLayout>