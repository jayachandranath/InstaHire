<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bacimg"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="40dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearcarpenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:src="@drawable/carser"
                android:layout_marginBottom="10dp"           />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carpenter"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearelectrician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/elecser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electrician"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearplumber"
            android:layout_below="@+id/linearcarpenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:src="@drawable/plumser"
                android:layout_marginBottom="10dp"           />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plumber"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearpainter"
            android:layout_below="@+id/linearelectrician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="200dp"
                android:src="@drawable/painter"
                android:layout_marginBottom="10dp"           />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Painter"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold"/>
        </LinearLayout>








    </RelativeLayout>







</LinearLayout>


